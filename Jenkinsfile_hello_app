pipeline {
    agent any
    triggers {
        pollSCM('*/1 * * * *')
    }

    stages {
        stage('build-app') {
            steps {
                sh "docker build -t vjerihova/hello-app:latest ."
                sh "docker push vjerihova/hello-app:latest"
            }
        }
        stage('deploy-dev') {
            steps {
                script {
                    deploy("dev")
                }
            }
        }
        stage('test-dev') {
            steps {
                script {
                    test("DEV")
                }
            }
        }
        stage('deploy-prd') {
            steps {
                script {
                    deploy("prd")
                }
            }
        }
        stage('test-prd') {
            steps {
                script {
                    test("PRD")
                }
            }
        }        
    }
}

def deploy(String environment){
    echo "Deploymment of hello-app to ${environment} is starting"
    sh "kubectl set image deployment hello-app-${environment} hello-app-${environment}-pod=vjerihova/hello-app:latest"
}

def test(String environment){
    echo "Testing of hello-app to ${environment}"
    sh "docker run --network=host -d -t --name api_test_executor_${environment} vjerihova/ubuntu_ruby_executer:latest"
    try {
        sh "docker exec api_test_executer_${environment} cucumber PLATFORM=${environment} --format progress -c --format html --out test-output/report_$(date +%T).html"
    }
    finally {
        sh "docker cp api_test_executer_${environment}:/usr/src/api-tests/test-output/report.html report_${environment}.html"
        sh "docker rm -f api_test_executer_${environment}"
        sh "docker run --network=host --rm --name api_dev_tests --entrypoint=cucumber vjerihova/ubuntu_ruby_executer:latest"
    }
}
